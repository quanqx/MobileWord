
<div class="container-fluid">
	<div class="navbar-header">
		<a class="navbar-brand" href="@Url.Action("Index", "Home")">MobileWorld</a>
	</div>
	<ul class="nav navbar-nav">
		<li class="active"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
		<li id="Phone">
			<a href="@Url.Action("SanPham", "Home", new { Loai = "L001", Page = 1})">Điện thoại</a>
			<div class="nav-content nav-phone-content">
				@for(int i = 0; i < ViewBag.listDienThoai.Count; i++)
				{
					if(i % 5 == 0)
					{
						<div>
							@for(int j = i; j <= i+4; j++)
							{
								if (j == ViewBag.listDienThoai.Count) { break; }
								<p><a href="@Url.Action("SanPhamByNhanHieu", "Home", new { NhanHieu = ViewBag.listDienThoai[j].MaNhanHieu})">Điện thoại @ViewBag.listDienThoai[j].TenNhanHieu</a></p>
							}
						</div>
					}
					
				}
			</div>
		</li>
		<li id="Tablet">
			<a href="@Url.Action("SanPham", "Home", new { Loai = "L002", Page = 1})">Máy tính bảng</a>
			<div class="nav-content nav-tablet-content">
				@for(int i = 0; i < ViewBag.listMayTinhBang.Count; i++)
				{
					if(i % 5 == 0)
					{
						<div>
							@for(int j = i; j <= i+4; j++)
							{
								if (j == ViewBag.listMayTinhBang.Count) { break; }
								<p><a href="@Url.Action("SanPhamByNhanHieu", "Home", new { NhanHieu = ViewBag.listDienThoai[j].MaNhanHieu})">Máy tính bảng @ViewBag.listMayTinhBang[j].TenNhanHieu</a></p>
							}
						</div>
					}
					
				}
			</div>
		</li>
		<li id="Part">
			<a href="@Url.Action("SanPham", "Home", new { Loai = "L003", Page = 1})">Phụ kiện</a>
			<div class="nav-content nav-part-content">
				@for(int i = 0; i < ViewBag.listPhuKien.Count; i++)
				{
					if(i % 5 == 0)
					{
						<div>
							@for(int j = i; j <= i+4; j++)
							{
								if (j == ViewBag.listPhuKien.Count) { break; }
								<p><a href="@Url.Action("SanPhamByNhanHieu", "Home", new { NhanHieu = ViewBag.listDienThoai[j].MaNhanHieu})">@ViewBag.listPhuKien[j].TenNhanHieu</a></p>
							}
						</div>
					}
					
				}
			</div>
		</li>
		<li><a href="#">Trả góp</a></li>
		<li id="News">
			<a href="#">Tin tức</a>
			<div class="nav-content nav-news-content">
				<p><a href="">Event khuyễn mãi</a></p>
				<p><a href="">Tuyển dụng</a></p>
				<p><a href="">Tin công nghệ</a></p>
			</div>
		</li>
		<li><a href="#">Khuyến mại</a></li>
	</ul>
	<form class="navbar-form navbar-left" action="/Home/Search">
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Tìm kiếm..." name="search">
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>

